<% content_for 'Navigation::Posts' do %>
  <%= link_to 'Drafts', admin_posts_path(posts: {status: :draft})%>
  <%= link_to 'Published', admin_posts_path(posts: {status: :published}) %>
  <%= link_to 'New Post', new_admin_post_path%>
<% end %>

<%= render('admin/navigation') %>

<section class='posts'>
  <%= content_tag :div, render('search'), class: %w(search) %>

  <ul class='posts' as='Posts.List'>
    <%= render @posts %>
  </ul>

  <%= form_for :posts, url: admin_posts_path, method: 'GET', html: {name: 'posts', id: 'PostsFilter', as: 'Posts.Filter'} do |f| %>
  <% end %>
</section>
