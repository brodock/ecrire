<%= content_tag :li, 'data-name' => title.name do %>
  <%= content_tag :time, "#{time_ago_in_words(title.created_at)} ago".capitalize %>
  <% if title.post.published? %>
    <%= link_to title.name, url(Ecrire::Theme::Engine.post_path, post: title.post), class: %w(name) %>
  <% else %>
    <%= content_tag :span, title.name, class: %w(name) %>
  <% end %>
<% end %>
